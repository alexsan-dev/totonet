{
	"compilerOptions": {
		"target": "esnext",
		"moduleResolution": "node",
		"baseUrl": "src",
		"paths": {
			"src/*": ["./src/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"removeComments": true,
		"noEmit": true,
		"isolatedModules": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"noImplicitAny": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*.ts"],
	"exclude": ["node_modules"]
}
